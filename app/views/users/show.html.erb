<% if logged_in? %>
<!-- Page Content -->
<div class="container">



<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<% else %>
<h1>Please log in to access information.<%= link_to "Log in", login_path %></h1>
<% end %>
